<div class="container">
    <div class="row">
        <div class="span4">
            <h4>Recent Posts</h4>
            <ul class="unstyled">
                {{#each model}}
                    {{#linkTo 'post' this}}<li>
                        {{title}} <small class="muted">by {{author}}</small>
                    </li>{{/linkTo}}
                {{/each}}
            </ul>
        </div>
        <div class="span8">
            {{outlet}}
        </div>
    </div>
</div>